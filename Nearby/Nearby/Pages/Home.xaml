<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:control="clr-namespace:Nearby.Controls"
             xmlns:local="clr-namespace:Nearby.Pages"
             xmlns:renderers="clr-namespace:Nearby.Renderers"
             x:Class="Nearby.Pages.Home"
             Title="Nearby">

  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="tbItemNavigateFav" Icon="favorite" />
    <ToolbarItem x:Name="tbItemNavigateOptions" Icon="ic_more_vert_white" />
  </ContentPage.ToolbarItems>
  
    <Grid RowSpacing="0">

      <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

        <Label x:Name="lblNotifyFilter" IsVisible="{Binding IsFilterEnabled}" VerticalOptions="Center" XAlign="Center" Style="{DynamicResource NearbyListItemDetailTextStyle}" Text="{Binding EnabledFilter}" />
        
        <maps:Map x:Name="placesMap" MapType="Street" />
        
        <Button BorderRadius="0" x:Name="btnSearchPlaces" BackgroundColor="#3F51B5" TextColor="White" VerticalOptions="End" Text="{Binding SearchButtonText}"></Button>
    
      </StackLayout>
      
    </Grid>
  
</ContentPage>